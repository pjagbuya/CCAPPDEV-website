{{#each profile}}
    <div class="profile-body">
      <section class= "profile-contact-section flex-column">
        <div class="profile-pic-and-name text-center">

          <div class="profile-column-section d-flex flex-column align-items-center justify-content-center">

            <img class="profile-regular-pic" src="{{imageSource}}" alt="default-pic">

            <p class="profile-name">
              {{firstName}} {{lastName}}
            </p>

            <p class="profile-name">
              ID : {{dlsuID}}
            </p>


          </div>


        </div>
        <hr>
        <div class="description-div">
          <div class="course-desc">
            <h2 class= "custom-header1">Course</h2>
            <p>BS in Computer Science: Major in Software Technology</p>
          </div>


          <div class="about-me">
            <h2 class= "custom-header1">About Me</h2>
            <p>User has yet to put a description!</p>

          </div>

        </div>
        <div class="contact-info-div ">
          <div class="contact-title">
            <i class="fa-solid fa-phone"></i>&nbsp; CONTACT
          </div>

          <table class="contact-table" cellpadding="10">
            <tr class="text-decoration-underline">
              <td>{{email}}</td>

            </tr>

          </table>


        </div>



      </section>


      <section class= "profile-main-section">




        <div class="reservation-next-days">
          <h2 class="custom-header2 custom-border-bottom1">Current Reservations</h2>
          <div class="day-container" id="daysContainer">
          </div>

        </div>


      </section>
    </div>
{{/each}}
